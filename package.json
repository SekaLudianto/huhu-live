{
  "name": "katla-live",
  "version": "1.0.0",
  "description": "TikTok LIVE Word Guessing Game",
  "main": "electron.js",
  "author": "AI Assistant",
  "license": "MIT",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:start": "electron .",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:5173 && npm run electron:start\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tiktoklive.katla",
    "productName": "KATLA LIVE",
    "files": [
      "dist/**/*",
      "electron.js",
      "data/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}